{
  "name": "to-callback",
  "version": "1.0.1",
  "description": "Converts result-first callbacks to classic (node.js-style) error-first callbacks with 3 lines of code. Useful when you want to promisify result-first APIs (like emitter.on). Inspired by [rfpify][] and probably used in it.",
  "repository": "tunnckoCore/to-callback",
  "author": "Charlike Mike Reagent <@tunnckoCore> (http://www.tunnckocore.tk)",
  "precommit.silent": true,
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "lint": "standard --verbose",
    "pretest": "npm run lint",
    "test": "npm run coverage",
    "posttest": "npm run lint:coverage",
    "coverage": "nyc node test.js",
    "lint:coverage": "nyc check-coverage --lines 0 --branches 0 --statements 0 --functions 0",
    "report-coverage": "nyc report --reporter=text-lcov | coveralls",
    "prerelease": "npm test",
    "release": "standard-version --sign --no-verify",
    "precommit": "git add --all",
    "commit": "git-cz"
  },
  "dependencies": {
    "try-catch-callback": "^2.0.0"
  },
  "devDependencies": {
    "commitizen": "^2.8.6",
    "coveralls": "^2.11.14",
    "cz-conventional-changelog": "^1.2.0",
    "eventemitter3": "^2.0.2",
    "mukla": "^0.4.4",
    "nyc": "^10.2.0",
    "pre-commit": "^1.1.3",
    "standard": "^9.0.2",
    "standard-version": "^4.0.0"
  },
  "files": [
    "index.js"
  ],
  "keywords": [
    "api",
    "apis",
    "callback",
    "cb",
    "convert",
    "create",
    "err",
    "errfirst",
    "error",
    "errorfirst",
    "first",
    "hybridables",
    "hybrids",
    "modify",
    "promisify",
    "res",
    "resfirst",
    "result",
    "resultfirst",
    "tocallback",
    "transform",
    "util"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "engines": {
    "node": ">=4",
    "npm": ">=3"
  },
  "verb": {
    "run": true,
    "toc": {
      "render": true,
      "method": "preWrite",
      "maxdepth": 3
    },
    "layout": "empty",
    "tasks": [
      "readme"
    ],
    "related": {
      "list": [
        "pify",
        "rfpify",
        "to-promise",
        "try-catch-core",
        "try-catch-callback",
        "always-done"
      ]
    },
    "lint": {
      "reflinks": true
    },
    "reflinks": [
      "always-done",
      "async-done",
      "dezalgo",
      "once",
      "rfpify",
      "try-catch-core"
    ]
  }
}
